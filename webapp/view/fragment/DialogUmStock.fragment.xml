<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
		
		<TableSelectDialog
		id="DialogUmStock"
		noDataText="No um "
		title="Um en stock"
		draggable = "true"
		resizable = "true"
		search=""
		confirm=""
		cancel=""
		items="{
			path : 'MaterialUmStockListModel>/results',
			sorter : {
				path : 'numtra',
				descending : false
			}
		}">
	<columns>
		    <Column  hAlign="Center" width="12%">  <Text text="Article"/>                 </Column>
			<Column  hAlign="Center" width="13%">  <Text text="UM" />                     </Column>
			<Column  hAlign="Center" width="13%">  <Text text="Emplacement" />            </Column>
			<Column  hAlign="Center" width="13%">  <Text text="Quantité totale" />        </Column>
			<Column  hAlign="Center" width="13%">  <Text text="Stock disponible" />       </Column>
			<Column  hAlign="Center" width="13%">  <Text text="Unité" />                  </Column>
		</columns>
		<ColumnListItem vAlign="Middle">
			<cells>
				    <ObjectIdentifier title="{MaterialUmStockListModel>material}" />
					<ObjectIdentifier title="{MaterialUmStockListModel>storUnit}" />
					<ObjectIdentifier title="{MaterialUmStockListModel>stgeBin}" />	
					<ObjectIdentifier title="{MaterialUmStockListModel>stock}" />
					<ObjectIdentifier title="{MaterialUmStockListModel>availStck}" />
					<ObjectIdentifier title="{MaterialUmStockListModel>baseUomIso}" />
			</cells>
		</ColumnListItem>
	
	</TableSelectDialog>
</core:FragmentDefinition>